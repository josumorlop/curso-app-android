            android:layout_marginTop="10dp"
            android:text="Nombre Completo"
            android:textSize="24sp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/dtv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
